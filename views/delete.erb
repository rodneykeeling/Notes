<section id="delete">
<% if @note %>
  <p>Confirm deletion of note: <em>"<%=h @note.content %>"</em></p>
  <form action="/<%= @note.id %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="Yes, Delete it.">
    <a href="/<%= @note.id %>">Cancel</a>
  </form>
<% else %>
  <p>Note not found.</p>
<% end %>
</section>
